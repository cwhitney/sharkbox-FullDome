<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
  <block 
  	name="sharkbox-FullDome" 
  	id="com.sharkbox.fulldome"
  	author="Charlie Whitney"
  	summary="A library for planetarium style fulldome graphics for Cinder 0.9"
	git="https://github.com/cwhitney/sharkbox-FullDome"
  	>
	<supports os="macosx" />
	<supports os="msw" />
	
	<headerPattern>src/*.h</headerPattern>
	<sourcePattern>src/*.cpp</sourcePattern>

	<includePath>src</includePath>
	
	<resource
		name="FULLDOME_LEFT_OBJ"
		type="TEXT"
		>resources/fulldome/left.obj</resource>
	<resource
		name="FULLDOME_RIGHT_OBJ"
		type="TEXT"
		>resources/fulldome/right.obj</resource>
	<resource
		name="FULLDOME_TOP_OBJ"
		type="TEXT"
		>resources/fulldome/top.obj</resource>
	<resource
		name="FULLDOME_BOTTOM_OBJ"
		type="TEXT"
		>resources/fulldome/bottom.obj</resource>
  </block>
</cinder>